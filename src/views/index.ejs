<!DOCTYPE html>
<html lang="pt-br">

<%- include("./partials/head.ejs")%>

<body>
    <%- include("./partials/navbar.ejs")%>
    <div class="container">
        <h1>Usuários do mongoDB:</h1>
        <div class="content">
            <% if (users.length > 0) { %> <% users.forEach(user => {  %>
            <div class="user">
                <h3><%= user.firstName%> <%= user.lastName%></h3>

                <p><%= user.email%></p>
            </div>

            <% }) %> <% } else {%>
            <p>Não há usuários para exibir...</p>
            <% } %>
        </div>
    </div>
</body>

</html>